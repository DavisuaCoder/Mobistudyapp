<?xml version='1.0' encoding='utf-8'?>
<widget id="org.mobistudy.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mobistudy App</name>
    <description>The participants' app of Mobistudy</description>
    <author href="http://mobistudy.org">
        Mobistudy Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="about:*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>Need location access to find things nearby</string>
    </edit-config>
    <gap:config-file mode="replace" parent="UIFileSharingEnabled" platform="ios">
        <true />
    </gap:config-file>
</widget>
